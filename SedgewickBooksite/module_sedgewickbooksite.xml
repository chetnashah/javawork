<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sedgewickbooksite" default="compile.module.sedgewickbooksite">
  <dirname property="module.sedgewickbooksite.basedir" file="${ant.file.module_sedgewickbooksite}"/>
  
  <property name="module.jdk.home.sedgewickbooksite" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sedgewickbooksite" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sedgewickbooksite" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sedgewickbooksite" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="sedgewickbooksite.output.dir" value="${module.sedgewickbooksite.basedir}/out/production/SedgewickBooksite"/>
  <property name="sedgewickbooksite.testoutput.dir" value="${module.sedgewickbooksite.basedir}/out/test/SedgewickBooksite"/>
  
  <path id="sedgewickbooksite.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sedgewickbooksite.module.production.classpath">
    <path refid="${module.jdk.classpath.sedgewickbooksite}"/>
  </path>
  
  <path id="sedgewickbooksite.runtime.production.module.classpath">
    <pathelement location="${sedgewickbooksite.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="sedgewickbooksite.module.classpath">
    <path refid="${module.jdk.classpath.sedgewickbooksite}"/>
    <pathelement location="${sedgewickbooksite.output.dir}"/>
  </path>
  
  <path id="sedgewickbooksite.runtime.module.classpath">
    <pathelement location="${sedgewickbooksite.testoutput.dir}"/>
    <pathelement location="${sedgewickbooksite.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sedgewickbooksite">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sedgewickbooksite">
    <patternset refid="excluded.from.module.sedgewickbooksite"/>
  </patternset>
  
  <path id="sedgewickbooksite.module.sourcepath">
    <dirset dir="${module.sedgewickbooksite.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sedgewickbooksite" depends="compile.module.sedgewickbooksite.production,compile.module.sedgewickbooksite.tests" description="Compile module SedgewickBooksite"/>
  
  <target name="compile.module.sedgewickbooksite.production" depends="register.custom.compilers" description="Compile module SedgewickBooksite; production classes">
    <mkdir dir="${sedgewickbooksite.output.dir}"/>
    <javac2 destdir="${sedgewickbooksite.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sedgewickbooksite}/javac">
      <compilerarg line="${compiler.args.sedgewickbooksite}"/>
      <bootclasspath refid="sedgewickbooksite.module.bootclasspath"/>
      <classpath refid="sedgewickbooksite.module.production.classpath"/>
      <src refid="sedgewickbooksite.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sedgewickbooksite"/>
    </javac2>
    
    <copy todir="${sedgewickbooksite.output.dir}">
      <fileset dir="${module.sedgewickbooksite.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sedgewickbooksite.tests" depends="register.custom.compilers,compile.module.sedgewickbooksite.production" description="compile module SedgewickBooksite; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sedgewickbooksite" description="cleanup module">
    <delete dir="${sedgewickbooksite.output.dir}"/>
    <delete dir="${sedgewickbooksite.testoutput.dir}"/>
  </target>
</project>